{
    "version": 6,
    "configurePresets" : [
        {
            "name" : "base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS" : true
            }
        },
        {
            "name" : "rel",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE" : "Release",
                "CMAKE_CXX_FLAGS_RELEASE_INIT" : "/GL",
                "CMAKE_EXE_LINKER_FLAGS_INIT" : "/LTCG"
            }
        },
        {
            "name" : "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE" : "Debug"
            }
        },
        {
            "name" : "ms_ninja",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS_INIT" : "/Wall /permissive- /wd4710 /wd4711"
            }
        },
        {
            "name" : "ms_ninja_deb",
            "displayName": "MSVC Ninja Debug Configure",
            "inherits" : ["debug", "ms_ninja"],
            "binaryDir": "${sourceDir}/build/ms_ninja_deb"
        },
        {
            "name" : "ms_ninja_rel",
            "displayName": "MSVC Ninja Release Configure",
            "inherits" : ["rel", "ms_ninja"],
            "binaryDir": "${sourceDir}/build/ms_ninja_rel"
        }
    ],
    "buildPresets": [
        {
            "name" : "ms_ninja_deb",
            "displayName": "MSVC Ninja Debug Build",
            "configurePreset": "ms_ninja_deb",
            "configuration": "Debug"
        },
        {
            "name" : "ms_ninja_rel",
            "displayName": "MSVC Ninja Release Build",
            "configurePreset": "ms_ninja_rel",
            "configuration": "Release"
        }
    ]
}